<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Change Scholar User Information"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="Doing so wil take a few minutes to update, do you wish to proceed?" />

    <Button
        android:id="@+id/change_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="30dp"
        android:onClick="onNegative"
        android:text="      No      " />

    <Button
        android:id="@+id/change_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/change_negative"
        android:layout_alignBottom="@+id/change_negative"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/change_negative"
        android:onClick="onPositive"
        android:text="     Yes     " />

</RelativeLayout>